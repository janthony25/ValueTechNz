@model List<ValueTechNz.Models.Dto.GetProductsDto>

@{
    ViewData["Title"] = "Product List";
}

<h2 class="text-center mb-5">@ViewData["Title"]</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Create">New Product</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>DateAdded</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="productTblBody">
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Brand</td>
                <td>@product.CategoryName</td>
                <td>@(product.Price)$</td>
                <td><img src="/img/@product.ImageFileName" width=100 /></td>
                <td>@product.DateAdded.ToString("MM/dd/yyyy")</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>